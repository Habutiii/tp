@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":BizUntagCommandParser" as BizUntagCommandParser LOGIC_COLOR
participant "b:BizUntagCommand" as BizUntagCommand LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR

end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute("unbiz f/Plan")
activate LogicManager

LogicManager -> AddressBookParser : parseCommand("f/plan")
activate AddressBookParser

create BizUntagCommandParser
AddressBookParser -> BizUntagCommandParser
activate BizUntagCommandParser

BizUntagCommandParser --> AddressBookParser
deactivate BizUntagCommandParser

AddressBookParser -> BizUntagCommandParser : parse("f/Plan")
activate BizUntagCommandParser

create BizUntagCommand
BizUntagCommandParser -> BizUntagCommand
activate BizUntagCommand

BizUntagCommand --> BizUntagCommandParser
deactivate BizUntagCommand

BizUntagCommandParser --> AddressBookParser: b
deactivate BizUntagCommandParser

'Hidden arrow to position the destroy marker below the end of the activation bar.
BizUntagCommandParser -[hidden]-> AddressBookParser
destroy BizUntagCommandParser

AddressBookParser --> LogicManager : b
deactivate AddressBookParser

LogicManager -> BizUntagCommand : execute()
activate BizUntagCommand

loop for (feature in features)
    BizUntagCommand -> Model : isBizFeature(feature)
    activate Model

    Model --> BizUntagCommand :
    deactivate Model

    opt isBizFeature == false
            BizUntagCommand -> BizUntagCommand : missingFeatures.append(feature)
            activate BizUntagCommand
            BizUntagCommand --> BizUntagCommand
            deactivate BizUntagCommand
    end
end


alt missingFeatures is empty
    loop for (feature in features)
        BizUntagCommand -> Model : removeBizFeature()
        activate Model

        Model --> BizUntagCommand
        deactivate Model

        BizUntagCommand -> BizUntagCommand : untaggedFeatures.append(feature)
        activate BizUntagCommand

        BizUntagCommand --> BizUntagCommand
        deactivate BizUntagCommand
    end

    BizUntagCommand -> BizUntagCommand : result = untaggedFeatures
    activate BizUntagCommand

    BizUntagCommand --> BizUntagCommand
    deactivate BizUntagCommand

else else
    BizUntagCommand -> BizUntagCommand : result = missingFeatures
    activate BizUntagCommand

    BizUntagCommand --> BizUntagCommand
    deactivate BizUntagCommand
end

create CommandResult
BizUntagCommand --> CommandResult : result
activate CommandResult

CommandResult --> BizUntagCommand
deactivate


BizUntagCommand --> LogicManager : r
deactivate BizUntagCommand
BizUntagCommand -[hidden]-> LogicManager : result


[<--LogicManager
deactivate LogicManager
@enduml
